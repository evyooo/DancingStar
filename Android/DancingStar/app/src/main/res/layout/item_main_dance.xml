<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_dance_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7.5dp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/item_dance_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boldnanumsquareround"
        android:text="가시나"
        android:textColor="@color/colorWhite"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_dance_tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lightnanumsquareround"
        android:text="선미"
        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

</LinearLayout>