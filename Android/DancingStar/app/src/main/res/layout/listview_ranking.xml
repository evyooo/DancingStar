<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorBlack">

    <ImageView
        android:id="@+id/rankinglv_iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rankinglv_tv_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rankinglv_tv_score"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/rankinglv_tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="score"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/rankinglv_tv_nickname"
        app:layout_constraintStart_toEndOf="@+id/rankinglv_tv_nickname"
        app:layout_constraintTop_toTopOf="@+id/rankinglv_tv_nickname" />

    <TextView
        android:id="@+id/rankinglv_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="nickname"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>